<odoo>
    <record id="action_hr_contract" model="ir.actions.act_window">
        <field name="name">Hợp đồng</field>
        <field name="res_model">hr.contract</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View cho hợp đồng -->
    <record id="view_hr_contract_tree" model="ir.ui.view">
        <field name="name">hr.contract.tree</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <tree string="Hợp đồng">
                <field name="employee_id"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="company_id"/>
                <field name="job_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="contract_type_id"/>
                <field name="resource_calendar_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View cho hợp đồng -->
    <record id="view_hr_contract_form" model="ir.ui.view">
        <field name="name">hr.contract.form</field>
        <field name="model">hr.contract</field>
        <field name="arch" type="xml">
            <form string="Hợp đồng">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="name"/>
                        <field name="department_id"/>
                        <field name="company_id"/>
                        <field name="job_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="contract_type_id"/>
                        <field name="resource_calendar_id"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
